<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.testshow.MainActivity">
    <LinearLayout
        android:id="@+id/show_layout"
        android:background="@mipmap/background_color"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/show_player"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclick"
            android:background="@mipmap/player_on"/>
        <TextView
            android:id="@+id/tv_show_player"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频宣传"
            android:textColor="#FFFF26"/>
        <ImageButton
            android:id="@+id/show_web"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onclick"
            android:background="@mipmap/logo"/>
        <TextView
            android:id="@+id/tv_show_web"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e联盟商城"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
    <VideoView
        android:layout_toRightOf="@+id/show_layout"
        android:id="@+id/videoView"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <WebView
        android:layout_toRightOf="@+id/show_layout"
        android:id="@+id/webview"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>




</RelativeLayout>
